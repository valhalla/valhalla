#!/bin/bash

error_exit() {
  echo "$1" 1>&2
  exit 1
}

function usage() {
  echo "Usage: $0 config_file data_file(s)"
  exit 1
}

if [ -z "$2" ]; then
        usage
fi

config=$1
datafiles=$2

# Initialize (e.g. create the directory or remove files if it already exists)
valhalla_build_tiles --config $1 --start initialize --end initialize $datafiles || error_exit "[Error] tile initialization failed!"

# Parse OSM PBF
valhalla_build_tiles --config $1 --start parse --end parse $datafiles || error_exit "[Error] OSM PBF parsing failed!"

# Build tiles
valhalla_build_tiles --config $1 --start build --end build $datafiles || error_exit "[Error] build tiles failed!"

# Enhance tiles
valhalla_build_tiles --config $1 --start enhance --end enhance $datafiles || error_exit "[Error] Enhance tiles failed!"

# Filter tiles (optional - based on config)
valhalla_build_tiles --config $1 --start filter --end filter $datafiles || error_exit "[Error] Filter tiles failed!"

# Add transit tiles (optional - based on config)
valhalla_build_tiles --config $1 --start transit --end transit $datafiles || error_exit "[Error] Add transit tiles failed!"

# Create hierarchy (optional - based on config)
valhalla_build_tiles --config $1 --start hierarchy --end hierarchy $datafiles || error_exit "[Error] Hierarchy building failed!"

# Create shortcuts (optional - based on config)
valhalla_build_tiles --config $1 --start shortcuts --end shortcuts $datafiles || error_exit "[Error] Shortcut building failed!"

# Add restrictions
valhalla_build_tiles --config $1 --start restrictions --end restrictions $datafiles || error_exit "[Error] Adding complex restrictions failed!"

# Validate data
valhalla_build_tiles --config $1 --start validate --end validate $datafiles || error_exit "[Error] Validate tiles failed!"

# Cleanup temporary files
valhalla_build_tiles --config $1 --start cleanup --end cleanup $datafiles || error_exit "[Error] Cleanup temporary data failed!"
